<h1 class="playlist-new-heading">Create New Playlist</h1>



<div class="questionnaire"></div>



<form action="/playlists" method="POST">

  <div class="form-group">
    <label for="playlist-title">Title</label>
    <input type="text" id="playlist-title" name="title">
  </div>

  <div class="form-group">
    <label for="playlist-description">Description</label>
    <input type="text" id="playlist-description" name="description" placeholder="(optional)">
  </div>

  <input type="submit" value="Create Playlist">

</form>



