<%- include('../partials/header.ejs') %>

<div class= "col-lg-11 col-auto text-white min-vh-100">
  <div class= "row no-gutters d-flex justify-content-center">
<h1 class="show-playlist-h1"><%= playlist.title %></h1>
</div>
  <div class= "row no-gutters d-flex justify-content-center">
<% if (playlist.description) { %> 
  <p><%= playlist.description %></p>
<% } %> 
</div>
<div>

  <% for( let i = 0; i < movies.length; i++ ) { %>

  <div>
      <h3><%= movies[i].title %></h3>
      <% if (movies[i].tagline) { %> 
        <p><%= movies[i].tagline %></p>
      <% } %> 
      <img src="https://image.tmdb.org/t/p/w500<%= movies[i].poster_path %>" alt="<%= movies[i].title %>">
      <p><%= movies[i].overview %></p>
  </div>
    
  <% } %>

</div>
</div>
<button id="delete-button" onclick="confirmDelete()">delete playlist</button>

<form id="confirm-delete-button" class="hide-content" action="/playlists/<%= playlist._id %>/?_method=DELETE" method="POST">
  <button type="submit">confirm delete</button>
</form>

<form action="/playlists/<%= playlist._id %>/edit" method="GET">
  <button type="submit">edit playlist</button>
</form>




